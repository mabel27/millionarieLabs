{{!-- /app/templates/users/profile.hbs --}} {{outlet}}
<div class="register-container container ">
  <div class="row">
    <br>
    <div class="col-md-3">
          <div  id="h1">
        <h3><span class="kf">Add Child</span><span><img  src="assets/image/businessmen33.png" width="50" height="50" ></span></h3>

      </div>

      <div id="back">
      <p id="p">Child Username:</p>
      {{input type= "text" class="form-control" placeholder="UserName" value=userName}}
      <button type="submit" class="btn btn-primary" {{action 'searchUser'}}>Search User</button>
      <button type="submit" class="btn btn-primary" {{action 'clearUserField'}}>Clear</button>
      <br/>{{#each selectedUserName in selectedUsers}}

      <div class="alert alert-danger" role="alert">
        {{selectedUserName}}
      </div>

      {{/each}}

      <p id="p">Select family:</p>
      <div class="form-group">
        {{view "Ember.Select" content=familiesSelection prompt="Please select a family" class="form-control" optionLabelPath="content.family.family_name" optionValuePath="content.family.id" value=selectedQuestion1}}
      </div>
      <p><a id="c_btn" class=" btn btn-default btn-md" href="#" role="button" {{action 'addChildToFamily'}}><span class="glyphicon glyphicon-star" aria-hidden="true" ></span>Add to Family</a>
      </p>

</div>
    </div>


    <div class="circle col-md-3">
      {{#link-to 'users.home'}}
      <img id="c" class="img-circle " src="assets/image/diamond38.png" alt="Generic placeholder image">
      <br>
      {{#each account in model}}
      <h3><span class="kf">{{account.userName}}</span></h3> {{/link-to}}
      <br>
      <p class="small">
        <img src="assets/image/dollar_coin.png" alt="">Balance:{{account.checkBalance}}</p>
      <p class="small">
        <img src="assets/image/not_available.png" alt="">Credit:{{account.creditBalance}}</p>
      <br>
      {{/each}}
      <input type="number" class="form-control" placeholder="Amount to Deposit">
      <br>
      <button type="submit" class="btn btn-primary">Deposit</button>
      <button type="submit" class="btn btn-danger">Withdraw</button>
      <br>
      <br>
      <p><a id="c_btn" class=" btn btn-default btn-md" href="#" role="button"><span class="glyphicon glyphicon-star" aria-hidden="true"></span>View details &raquo;</a>
      </p>

    </div>

    <div class="circle col-md-3">
      {{#link-to 'users.home'}}
      <img id="c" class="img-circle " src="assets/image/royalties.png" alt="Generic placeholder image">
      <br>
      <h3><span class="kf">Likun Activity.</span></h3> {{/link-to}}
      <br>
      <p class="small">
        <img src="assets/image/dollar_coin.png" alt="">Present Balance: 200$</p>
      <p class="small">
        <img src="assets/image/not_available.png" alt="">Pending Withdrawals: -30$</p>
      <br>
      <input type="number" class="form-control" placeholder="Amount to Deposit">
      <br>
      <button type="submit" class="btn btn-primary">Deposit</button>
      <button type="submit" class="btn btn-danger">Withdraw</button>
      <br>
      <br>
      <p><a id="c_btn" class=" btn btn-default btn-md" href="#" role="button"><span class="glyphicon glyphicon-star" aria-hidden="true"></span>View details &raquo;</a>
      </p>

    </div>

    <div class="circle col-md-3">
      {{#link-to 'users.home'}}
      <img id="c" class="img-circle " src="assets/image/star173.png" alt="Generic placeholder image">
      <br>
      <h3><span class="kf">Maddie Activity.</span></h3> {{/link-to}}
      <br>
      <p class="small">
        <img src="assets/image/dollar_coin.png" alt="">Present Balance: 200$</p>
      <p class="small">
        <img src="assets/image/not_available.png" alt="">Pending Withdrawals: -30$</p>
      <br>
      <input type="number" class="form-control" placeholder="Amount to Deposit">
      <br>
      <button type="submit" class="btn btn-primary">Deposit</button>
      <button type="submit" class="btn btn-danger">Withdraw</button>
      <br>
      <br>
      <p><a id="c_btn" class=" btn btn-default btn-md" href="#" role="button"><span class="glyphicon glyphicon-star" aria-hidden="true"></span>View details &raquo;</a>
      </p>

    </div>

  </div>
</div>

