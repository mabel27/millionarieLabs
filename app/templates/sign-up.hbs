{{!-- /app/templates/sign-up.hbs --}}
<header>

  <nav class="navbar navbar-default">

    <div class="container-fluid">

      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#side_bar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <a class="navbar-brand kf" style="cursor:pointer"> <i class="ki k-tree"></i>Millionaire Labs</a>

      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li>
            <button type="button" class="btn btn-primary navbar-btn">{{#link-to 'signIn'}}Sign In{{/link-to}}</button>
          </li>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
  </nav>


</header>

<body>

  <div class="register-container ">
    <div class="row ">
      <div class="wow pulse">
        <div class="wallet col-xs-2 col-md-4">
        </div>

      </div>
      <div class="register col-xs-8 col-md-7">
        <div class="wow fadeInDown" data-wow-delay="0.3s">
          <form {{ action "createUser" on="submit" }} role="form">
            <h2 class="kf">Create a new User! </h2>
            {{input type= "text" id="input" class="form-control" placeholder="UserName" value=userName}} {{#each error in user.errors.userName}}

            <div class="alert alert-danger">
              {{error.message}}.
            </div>

            {{/each}}

            <div class="form-group">
              {{view "Ember.Select" content=role class="form-control" prompt="Role" value=selectedRole}}
            </div>

            {{input type= "email" id="email" class="form-control" placeholder="Email" value=email}} {{#each error in user.errors.email}}

            <div class="alert alert-danger">
              {{error.message}}.
            </div>

            {{/each}} {{input type="password" class="form-control" placeholder="Password" value=password}} {{#each error in user.errors.password}}


            <div class="alert alert-danger" role="alert">
              {{error.message}}.
            </div>

            {{/each}} {{input type="password" class="form-control" placeholder=" Confirm Password" value=passwordConfirmation}} {{#each error in user.errors.passwordConfirmation}}


            <div class="alert alert-danger" role="alert">
              {{error.message}}.
            </div>

            {{/each}}
            <div id="SecuritySection">
              <p class="kf">Security Questions</p>
              <hr class="star-primary">
              <div class="form-group">
                {{view "Ember.Select" content=questionSelection prompt="Please select a question" class="form-control" optionLabelPath="content.security_question.description" optionValuePath="content.security_question.id" value=selectedQuestion1}}
              </div>

              {{input type= "text" class="form-control" placeholder="Answer question 1" value=answerQuestion1}}

              <div class="form-group">
                {{view "Ember.Select" content=questionSelection prompt="Please select a question" class="form-control" optionLabelPath="content.security_question.description" optionValuePath="content.security_question.id" value=selectedQuestion2}}
              </div>
              {{input type= "text" class="form-control" placeholder="Answer question 2" value=answerQuestion2}}
            </div>

            <button class="btn btn-primary btn-md" type="submit"><span class="kf">REGISTER</span> 
            </button>
            <button class="btn btn-primary btn-md" type="reset"> <span class="kf">CANCEL </span>
            </button>
            <br>
            <p>{{#link-to 'signIn'}}Already In? Login{{/link-to}}</p>


          </form>
        </div>
      </div>

      <div class=" col-md-1">
      </div>

    </div>
  </div>

</body>
