{{!-- /app/templates/sign-in.hbs --}}

<header>

  <div class="login-container container">
    <div class="row">

      <div class="wallet col-md-5">
        <img src="assets/image/credit35.png" alt="">
      </div>
      <div class="login col-md-6">

        <form {{ action "authenticate" on="submit" }} role="form">
          <h2><span class="kf">Login </span></h2>
          {{!-- {{input type= "text" class="form-control" placeholder="User Name" value=userName}} 
          
                  
          {{input type="password" class="form-control" placeholder="Password" value=password}} --}}

          <div class="form-group">
            {{input value=identification placeholder='User Name' class='form-control'}}
            
                 
          </div>
          <div class="form-group">
            {{input type="password" value= password placeholder='Password' class='form-control'}}
                  
            
          </div>
          <button class="btn btn-primary btn-md" type="submit"><span class="kf">Sign In</span> 
          </button>
          <br>
          <br>{{#link-to 'signUp'}}Not in the lab? Register now{{/link-to}}
          <br>
          <br><i class=" fa fa-lock ">{{#link-to 'signUp'}} Lost Password? {{/link-to}}</i>

        </form>
      </div>
    </div>
  </div>

<br>
  <br>
  <br>

</header>